<!DOCTYPE html>
<html>
<head>
  <title>TsLocator</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">ST Locater</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control" autocomplete="off" style="cursor: auto; background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control" autocomplete="off" style="cursor: pointer; background-image: url(data:image/png;base64,); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
            <button type="submit" class="btn btn-primary" href="">Sign up!</button>
<!-- Add link to redirect to map or sign-up forms -->
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
<!-- Message Area -->
<!--     <div class="jumbotron"> -->
      <div class="container">
        <h1>Education Navigation</h1>
        <p>A travel app that decreases the distance between university supervisors and the student-teachers they mentor. </p>
        <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more »</a></p>
      </div>
<!--     </div> -->

    <div class="container">
		<%= yield %>

      <hr>

      <footer>
        <p>© TKS 2015</p>
      </footer>
    </div> <!-- /container -->

</body>
</html>
